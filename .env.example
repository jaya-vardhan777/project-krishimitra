# Environment Configuration Example for KrishiMitra Platform
# Copy this file to .env and update with your actual values

# Application Environment
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# DynamoDB Tables (will be set by CDK deployment)
FARMER_PROFILES_TABLE=krishimitra-farmer-profiles-dev
CONVERSATIONS_TABLE=krishimitra-conversations-dev
RECOMMENDATIONS_TABLE=krishimitra-recommendations-dev
SENSOR_READINGS_TABLE=krishimitra-sensor-readings-dev

# S3 Buckets (will be set by CDK deployment)
AGRICULTURAL_IMAGERY_BUCKET=krishimitra-agricultural-imagery-dev
WEATHER_DATA_BUCKET=krishimitra-weather-data-dev
MARKET_DATA_BUCKET=krishimitra-market-data-dev
MODEL_ARTIFACTS_BUCKET=krishimitra-model-artifacts-dev

# Cognito Configuration (will be set by CDK deployment)
USER_POOL_ID=your_user_pool_id_here
USER_POOL_CLIENT_ID=your_user_pool_client_id_here

# Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_REGION=us-east-1

# Voice Processing Configuration
TRANSCRIBE_LANGUAGE_CODES=["hi-IN", "ta-IN", "te-IN", "bn-IN", "mr-IN", "gu-IN", "pa-IN"]

# WhatsApp Configuration
WHATSAPP_VERIFY_TOKEN=your_whatsapp_verify_token_here
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id_here

# External API Configuration
WEATHER_API_KEY=your_weather_api_key_here
MARKET_API_KEY=your_market_api_key_here